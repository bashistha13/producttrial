@model trial.Models.PurchaseEntry
@{ ViewData["Title"] = "New Purchase Entry"; }

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-dark">New Purchase Entry</h2>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<form asp-action="Create" method="post">
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-white py-3"><h6 class="m-0 font-weight-bold text-primary">Invoice Details</h6></div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 form-group">
                    <label>Invoice No</label>
                    <input asp-for="InvoiceNo" class="form-control" required />
                </div>
                <div class="col-md-3 form-group">
                    <label>Date</label>
                    <input asp-for="PurchaseDate" type="date" class="form-control" required />
                </div>
                <div class="col-md-3 form-group">
                    <label>Supplier</label>
                    <input asp-for="Supplier" class="form-control" required />
                </div>
                <div class="col-md-3 form-group">
                    <label>Supplier VAT</label>
                    <input asp-for="SupplierVAT" class="form-control" required />
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Product Items</h6>
            <button type="button" id="btnAddRow" class="btn btn-sm btn-primary"><i class="bi bi-plus-lg"></i> Add Item</button>
        </div>
        <div class="card-body p-0">
            <table class="table table-bordered mb-0" id="tblItems">
                <thead class="thead-light">
                    <tr>
                        <th>Product</th>
                        <th width="150">Price (Unit)</th>
                        <th width="150">Quantity</th>
                        <th width="150">Line Total</th>
                        <th width="50"></th>
                    </tr>
                </thead>
                <tbody>
                    </tbody>
            </table>
            
            <div class="p-3 text-right bg-light border-top">
                <label class="font-weight-bold mr-2">Grand Total:</label>
                <input asp-for="TotalAmount" type="number" step="0.01" class="form-control d-inline-block bg-white font-weight-bold text-success" style="width: 150px;" readonly />
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-success btn-lg shadow-sm">Save Entry & Update Stock</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            addRow();

            $('#btnAddRow').click(function () {
                addRow();
            });

            // Event Delegation: Handle changes on Product Select or Quantity Input
            $(document).on('change keyup', '.product-select, .qty-input', function () {
                calculateRowTotal($(this).closest('tr'));
                calculateGrandTotal();
            });

            $(document).on('click', '.btn-remove', function () {
                $(this).closest('tr').remove();
                reindexRows();
                calculateGrandTotal();
            });
        });

        function addRow() {
            var index = $('#tblItems tbody tr').length;
            
            // Build Options with Data-Price Attribute
            var options = '<option value="" data-price="0">-- Select Product --</option>';
            @if (ViewBag.FullProductList != null)
            {
                foreach (var p in (List<trial.Models.Product>)ViewBag.FullProductList)
                {
                    <text>
                    options += '<option value="@p.ProductId" data-price="@p.Price">@p.ProductName</option>';
                    </text>
                }
            }

            var html = `
                <tr>
                    <td>
                        <select name="Details[${index}].ProductId" class="form-control product-select" required>
                            ${options}
                        </select>
                    </td>
                    <td>
                        <input type="text" class="form-control price-display" readonly disabled value="0.00" />
                    </td>
                    <td>
                        <input type="number" name="Details[${index}].Quantity" class="form-control qty-input" required min="1" value="1" />
                    </td>
                    <td>
                        <input type="text" class="form-control line-total" readonly disabled value="0.00" />
                    </td>
                    <td class="text-center">
                        <button type="button" class="btn btn-danger btn-sm btn-remove"><i class="bi bi-trash"></i></button>
                    </td>
                </tr>
            `;
            $('#tblItems tbody').append(html);
        }

        function calculateRowTotal(row) {
            // Get selected option price
            var price = parseFloat(row.find('.product-select option:selected').data('price')) || 0;
            var qty = parseInt(row.find('.qty-input').val()) || 0;
            var total = price * qty;

            // Update UI fields
            row.find('.price-display').val(price.toFixed(2));
            row.find('.line-total').val(total.toFixed(2));
        }

        function calculateGrandTotal() {
            var grandTotal = 0;
            $('#tblItems tbody tr').each(function () {
                var rowTotal = parseFloat($(this).find('.line-total').val()) || 0;
                grandTotal += rowTotal;
            });
            $('#TotalAmount').val(grandTotal.toFixed(2));
        }

        function reindexRows() {
            $('#tblItems tbody tr').each(function (i, row) {
                $(row).find('select').attr('name', `Details[${i}].ProductId`);
                $(row).find('.qty-input').attr('name', `Details[${i}].Quantity`);
            });
        }
    </script>
}